<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorError">@color/error</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <!-- Light Theme -->
    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorError">@color/error</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/input_background</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark_variant</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorError">@color/error</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/primary_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
    </style>
</resources>
